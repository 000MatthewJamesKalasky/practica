generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://myuser:myuserpassword@localhost:54320/shop?schema=public"
}

model Countries {
  id   Int     @id @default(autoincrement())
  name String? @db.VarChar(255)
}

model Orders {
  id                 Int      @id @default(autoincrement())
  externalIdentifier String?  @unique @db.VarChar(255)
  userId             Int?
  productId          Int?
  paymentTermsInDays Int?
  deliveryAddress    String?  @db.VarChar(255)
  createdAt          DateTime @db.Timestamptz(6) @default(now())
  updatedAt          DateTime @db.Timestamptz(6) @default(now())
}

model SequelizeMeta {
  name String @id @db.VarChar(255)
}
